<form action="/settings/update" method="POST">
    <label for="email">Email</label>
    <input type="email" name="email" id="email" value="{{email}}">

    <label for="DoB">Date of birth</label>
    <input type="date" name="DoB" id="DoB" value="{{dob}}">

    <label for="maxDist">Max distance</label>
    <input type="range" id="maxDist" name="maxDistance" list="tickmarks" min="0" max="100" step="5" value="{{maxDistance}}">

    <label for="minAge">Min age</label>
    <input type="text" name="minAge" id="minAge" value="{{minAge}}">

    <label for="maxAge">Max age</label>
    <input type="text" name="maxAge" id="maxAge" value="{{maxAge}}"> {{#if prefMen}}
    <label for="genderMale">Male</label>
    <input type="radio" name="gender" id="genderMale" checked="checked" value="male">

    <label for="genderFemale">Female</label>
    <input type="radio" name="gender" id="genderFemale" value="female"> {{else}}
    <label for="genderMale">Male</label>
    <input type="radio" name="gender" id="genderMale" value="male">

    <label for="genderFemale">Female</label>
    <input type="radio" name="gender" id="genderFemale" value="female" checked="checked"> {{/if}}

    <label for="username">Username</label>
    <input type="text" name="username" id="username" value="{{username}}"> {{#if pushNotification}}
    <label for="pushOn">Push notification On</label>
    <input type="radio" name="pushNotification" id="pushOn" checked="checked" value="pushOn">

    <label for="pushOff">Push notification off</label>
    <input type="radio" name="pushNotification" id="pushOff" value="pushOff"> {{else}}
    <label for="pushOn">Push notification On</label>
    <input type="radio" name="pushNotification" id="pushOn" value="pushOn">

    <label for="pushOff">Push notification off</label>
    <input type="radio" name="pushNotification" id="pushOff" checked="checked" value="pushOff"> {{/if}}
    <br>
    <a href="#">Help and support</a>
    <br>
    <a href="#">Safety tips</a>
    <br>
    <a href="#">Privacy</a>
    <br>
    <a href="#">Terms of use</a>
    <br>
    <a href="#">License</a>
    <br>
    <a href="#">Delete account</a>
    <br>
    <a href="">Log out</a>
    <br>
    <br>
    <button type="submit">Save changes</button>
</form>